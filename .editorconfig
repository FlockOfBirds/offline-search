[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[ {.babelrc, .stylelintrc, .eslintrc, *.json} ]
indent_style = space
indent_size = 2

[*.sass]
indent_style = space
indent_size = 4

[tslint.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[package.json]
indent_style = space
indent_size = 2
